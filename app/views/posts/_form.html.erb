<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      </div><%= form_for(@post) do |f| %>
            <% if @post.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

                <ul>
                <% @post.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
                </ul>
              </div>
            <% end %>

            <div class="field">
              <%= f.label :title %><br />
              <%= f.text_field :title %>
            </div>
            <div class="field">
              <%= f.label :content %><br />
              <%= f.text_area :content %>
            </div>
            <div class="field">
              <%= f.label :author %><br />
              <%= f.select :author_id, @authors.collect { |a| [ a.name, a.id ] }  %>
            </div>
            <div class="field">
              <%= f.label :category %><br />
              <%= f.select :category_id, @categories.collect { |c| [ c.name, c.id ] } %>
            </div>
            <div class="actions">
              <%= f.submit %>
            </div>
          <% end %>
    </div>
  </div>
</div>