<p id="notice"><%= notice %></p>
    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span12">
          <p>
            <b><%= @post.title %></b>
          </p>

          <p>
            <%= @post.content %>
          </p>

          <p>
            <b>Autor:</b>
            <%= @post.author.name %>
          </p>

          <p>
            <b>Categorias:</b>
            <%= @post.category.name %>
          </p>

          <p>
            <b>Atualizado em:</b>
            <%= @post.created_at.strftime("%d/%m/%Y - %H:%M") %>
          </p>

          <%= link_to 'Edit', edit_post_path(@post) %> |
          <%= link_to 'Back', posts_path %>
        </div>
      </div>
    </div> 
